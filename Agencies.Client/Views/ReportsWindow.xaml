<Window x:Class="Agencies.Client.Views.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agencies.Client.Views"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Отчеты и статистика" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- Конвертер для видимости -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📊 Отчеты и аналитика" 
                          Foreground="White" 
                          FontSize="20" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="20,0,0,0">
                    <DatePicker x:Name="dpStartDate" 
                                SelectedDate="{Binding StartDate}"
                                Width="120" 
                                Margin="5,0"/>
                    <TextBlock Text="по" 
                              Foreground="White" 
                              VerticalAlignment="Center" 
                              Margin="5,0"/>
                    <DatePicker x:Name="dpEndDate" 
                                SelectedDate="{Binding EndDate}"
                                Width="120" 
                                Margin="5,0"/>

                    <Button x:Name="btnGenerateAll" 
                            Content="Сгенерировать все" 
                            Click="BtnGenerateAll_Click"/>
                    <Button x:Name="btnExport" 
                            Content="Экспорт в PDF" 
                            Click="BtnExport_Click"/>
                    <Button x:Name="btnPrint" 
                            Content="Печать" 
                            Click="BtnPrint_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Sales Report Tab -->
            <TabItem Header="Отчет по продажам">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Обновить" 
                                Click="BtnRefreshSales_Click"/>
                        <Button Content="Экспорт в Excel" 
                                Click="BtnExportSales_Click"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Summary Cards -->
                            <WrapPanel Margin="0,0,0,20">
                                <Border BorderBrush="#3498db" 
                                        BorderThickness="1" 
                                        CornerRadius="5"
                                        Width="200" 
                                        Height="100" 
                                        Margin="5"
                                        Background="#f8f9fa">
                                    <StackPanel VerticalAlignment="Center" 
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="Общая выручка" 
                                                   FontSize="12" 
                                                   Foreground="#7f8c8d"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding SalesReport.TotalRevenue, StringFormat='C'}" 
                                                   FontSize="24" 
                                                   FontWeight="Bold"
                                                   Foreground="#27ae60"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border BorderBrush="#3498db" 
                                        BorderThickness="1" 
                                        CornerRadius="5"
                                        Width="200" 
                                        Height="100" 
                                        Margin="5"
                                        Background="#f8f9fa">
                                    <StackPanel VerticalAlignment="Center" 
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="Всего сделок" 
                                                   FontSize="12" 
                                                   Foreground="#7f8c8d"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding SalesReport.TotalDeals}" 
                                                   FontSize="24" 
                                                   FontWeight="Bold"
                                                   Foreground="#3498db"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border BorderBrush="#3498db" 
                                        BorderThickness="1" 
                                        CornerRadius="5"
                                        Width="200" 
                                        Height="100" 
                                        Margin="5"
                                        Background="#f8f9fa">
                                    <StackPanel VerticalAlignment="Center" 
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="Завершено сделок" 
                                                   FontSize="12" 
                                                   Foreground="#7f8c8d"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding SalesReport.CompletedDeals}" 
                                                   FontSize="24" 
                                                   FontWeight="Bold"
                                                   Foreground="#2ecc71"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border BorderBrush="#3498db" 
                                        BorderThickness="1" 
                                        CornerRadius="5"
                                        Width="200" 
                                        Height="100" 
                                        Margin="5"
                                        Background="#f8f9fa">
                                    <StackPanel VerticalAlignment="Center" 
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="Средняя сумма" 
                                                   FontSize="12" 
                                                   Foreground="#7f8c8d"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding SalesReport.AverageDealAmount, StringFormat='C'}" 
                                                   FontSize="24" 
                                                   FontWeight="Bold"
                                                   Foreground="#e74c3c"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </WrapPanel>

                            <!-- Charts -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="300"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Monthly Revenue Chart -->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                        BorderBrush="#ddd" 
                                        BorderThickness="1" 
                                        Margin="0,0,0,10"
                                        Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="Выручка по месяцам" 
                                                   FontSize="16" 
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,10"/>
                                        <lvc:CartesianChart x:Name="chartMonthlyRevenue"
                                                           Series="{Binding MonthlyRevenueSeries}"
                                                           LegendLocation="Right">
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis Title="Месяц" 
                                                          Labels="{Binding MonthLabels}"/>
                                            </lvc:CartesianChart.AxisX>
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis Title="Выручка, руб" 
                                                          LabelFormatter="{Binding CurrencyFormatter}"/>
                                            </lvc:CartesianChart.AxisY>
                                        </lvc:CartesianChart>
                                    </StackPanel>
                                </Border>

                                <!-- Deal Status Pie Chart -->
                                <Border Grid.Row="1" Grid.Column="0"
                                        BorderBrush="#ddd" 
                                        BorderThickness="1" 
                                        Margin="0,0,5,0"
                                        Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="Статус сделок" 
                                                   FontSize="16" 
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,10"/>
                                        <lvc:PieChart x:Name="chartDealStatus"
                                                     Series="{Binding DealStatusSeries}"
                                                     LegendLocation="Bottom"/>
                                    </StackPanel>
                                </Border>

                                <!-- Agent Performance Chart -->
                                <Border Grid.Row="1" Grid.Column="1"
                                        BorderBrush="#ddd" 
                                        BorderThickness="1" 
                                        Margin="5,0,0,0"
                                        Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="Эффективность агентов" 
                                                   FontSize="16" 
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,10"/>
                                        <lvc:CartesianChart x:Name="chartAgentPerformance"
                                                           Series="{Binding AgentPerformanceSeries}">
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis Title="Агенты" 
                                                          Labels="{Binding AgentLabels}"/>
                                            </lvc:CartesianChart.AxisX>
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis Title="Выручка, руб"/>
                                            </lvc:CartesianChart.AxisY>
                                        </lvc:CartesianChart>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Tables -->
                            <TabControl Margin="0,20,0,0">
                                <TabItem Header="Статистика по агентам">
                                    <DataGrid x:Name="dgAgentStats" 
                                              AutoGenerateColumns="False"
                                              ItemsSource="{Binding SalesReport.AgentStatistics}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Агент" 
                                                                Binding="{Binding AgentName}" 
                                                                Width="150"/>
                                            <DataGridTextColumn Header="Всего сделок" 
                                                                Binding="{Binding TotalDeals}" 
                                                                Width="100"/>
                                            <DataGridTextColumn Header="Завершено" 
                                                                Binding="{Binding CompletedDeals}" 
                                                                Width="100"/>
                                            <DataGridTextColumn Header="Выручка" 
                                                                Binding="{Binding TotalRevenue, StringFormat='C'}" 
                                                                Width="120"/>
                                            <DataGridTextColumn Header="Успешность" 
                    Binding="{Binding SuccessRateFormatted}" 
                    Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </TabItem>

                                <TabItem Header="Топ объектов">
                                    <DataGrid x:Name="dgTopProperties" 
                                              AutoGenerateColumns="False"
                                              ItemsSource="{Binding SalesReport.TopProperties}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Объект" 
                                                                Binding="{Binding PropertyTitle}" 
                                                                Width="200"/>
                                            <DataGridTextColumn Header="Кол-во сделок" 
                                                                Binding="{Binding DealCount}" 
                                                                Width="100"/>
                                            <DataGridTextColumn Header="Общая выручка" 
                                                                Binding="{Binding TotalRevenue, StringFormat='C'}" 
                                                                Width="120"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </TabItem>
                            </TabControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Property Analysis Tab -->
            <TabItem Header="Анализ объектов">
                <Grid>
                    <TextBlock Text="В разработке..." 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontSize="16"/>
                </Grid>
            </TabItem>

            <!-- Agent Performance Tab -->
            <TabItem Header="Эффективность агентов">
                <Grid>
                    <TextBlock Text="В разработке..." 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontSize="16"/>
                </Grid>
            </TabItem>

            <!-- Financial Report Tab -->
            <TabItem Header="Финансовый отчет">
                <Grid>
                    <TextBlock Text="В разработке..." 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontSize="16"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="tbStatus" Text="Готов"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <ProgressBar x:Name="pbProgress" 
                                 Width="200" 
                                 Height="20"
                                 IsIndeterminate="{Binding IsLoading}"/>
                    <TextBlock x:Name="tbProgressText" 
                               Text="{Binding ProgressText}"
                               Margin="5,0,0,0"
                               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>