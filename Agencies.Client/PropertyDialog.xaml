<Window x:Class="Agencies.Client.PropertyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Объект недвижимости" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Row 0: Заголовок -->
            <TextBlock Grid.Row="0" Text="Объект недвижимости" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Row 1: Название -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Название*:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtTitle" Height="30"/>
            </StackPanel>

            <!-- Row 2: Адрес -->
            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Адрес*:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtAddress" Height="30"/>
            </StackPanel>

            <!-- Row 3: Цена -->
            <StackPanel Grid.Row="3" Margin="0,0,0,10">
                <TextBlock Text="Цена*:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtPrice" Height="30"/>
            </StackPanel>

            <!-- Row 4: Площадь -->
            <StackPanel Grid.Row="4" Margin="0,0,0,10">
                <TextBlock Text="Площадь (м²)*:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtArea" Height="30"/>
            </StackPanel>

            <!-- Row 5: Тип -->
            <StackPanel Grid.Row="5" Margin="0,0,0,10">
                <TextBlock Text="Тип*:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cbType" Height="30">
                    <ComboBoxItem Content="Квартира"/>
                    <ComboBoxItem Content="Дом"/>
                    <ComboBoxItem Content="Коммерческая недвижимость"/>
                </ComboBox>
            </StackPanel>

            <!-- Row 6: Комнаты -->
            <StackPanel Grid.Row="6" Margin="0,0,0,10">
                <TextBlock Text="Количество комнат*:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtRooms" Height="30"/>
            </StackPanel>

            <!-- Row 7: Описание -->
            <StackPanel Grid.Row="7" Margin="0,0,0,10">
                <TextBlock Text="Описание:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDescription" Height="80"
                         AcceptsReturn="True" TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

            <!-- Row 8: Доступность -->
            <CheckBox Grid.Row="8" x:Name="cbIsAvailable" 
                      Content="Доступно для продажи"
                      IsChecked="True" Margin="0,0,0,20"/>

            <!-- Row 9: Кнопки -->
            <StackPanel Grid.Row="9" Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="btnSave" Content="Сохранить" 
                        Width="80" Height="30" Margin="0,0,10,0"
                        Click="BtnSave_Click"/>
                <Button x:Name="btnCancel" Content="Отмена" 
                        Width="80" Height="30"
                        Click="BtnCancel_Click"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</Window>