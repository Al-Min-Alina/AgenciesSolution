<Window x:Class="Agencies.Client.Dialogs.ClientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agencies.Client.Dialogs"
        xmlns:loc="clr-namespace:Agencies.Client.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="{Binding WindowTitle}" 
                   FontSize="18" 
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- First Name -->
                <TextBlock Text="Имя:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtFirstName" 
                         Text="{Binding Client.FirstName, UpdateSourceTrigger=PropertyChanged}"
                         Height="30" 
                         Margin="0,0,0,10"/>

                <!-- Last Name -->
                <TextBlock Text="Фамилия:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtLastName" 
                         Text="{Binding Client.LastName, UpdateSourceTrigger=PropertyChanged}"
                         Height="30" 
                         Margin="0,0,0,10"/>

                <!-- Phone -->
                <TextBlock Text="Телефон:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtPhone" 
                         Text="{Binding Client.Phone, UpdateSourceTrigger=PropertyChanged}"
                         Height="30" 
                         Margin="0,0,0,10"/>

                <!-- Email -->
                <TextBlock Text="Email:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" 
                         Text="{Binding Client.Email, UpdateSourceTrigger=PropertyChanged}"
                         Height="30" 
                         Margin="0,0,0,10"/>

                <!-- Budget -->
                <TextBlock Text="Бюджет:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtBudget" 
                         Text="{Binding Client.Budget, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                         Height="30" 
                         Margin="0,0,0,10"/>

                <!-- Requirements -->
                <TextBlock Text="Требования:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtRequirements" 
                         Text="{Binding Client.Requirements, UpdateSourceTrigger=PropertyChanged}"
                         Height="100" 
                         Margin="0,0,0,10"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>

                <!-- Agent (only for Admin) -->
                <TextBlock x:Name="tbAgentLabel" 
                           Text="Агент:" 
                           Margin="0,0,0,5"
                           Visibility="Collapsed"/>
                <ComboBox x:Name="cbAgent" 
                          Visibility="Collapsed"
                          Height="30" 
                          Margin="0,0,0,10"
                          DisplayMemberPath="Username"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding Client.AgentId}"/>

                <!-- Error Message -->
                <TextBlock x:Name="tbError" 
                           Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="btnSave" 
                    Content="Сохранить" 
                    Width="100" 
                    Height="30"
                    IsDefault="True"
                    Click="BtnSave_Click"
                    IsEnabled="{Binding CanSave}"/>
            <Button Content="Отмена" 
                    Width="100" 
                    Height="30" 
                    Margin="10,0,0,0"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>