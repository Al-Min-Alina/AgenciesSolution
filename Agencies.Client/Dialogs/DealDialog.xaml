<Window x:Class="Agencies.Client.Dialogs.DealDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Agencies.Client.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="{Binding WindowTitle}" 
                   FontSize="18" 
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Property Selection -->
                <TextBlock Text="Объект недвижимости:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cbProperty" 
                          ItemsSource="{Binding Properties}"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding Deal.PropertyId}"
                          Height="30" 
                          Margin="0,0,0,10">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Address}" FontSize="11" Foreground="Gray"/>
                                <TextBlock Text="{Binding Price, StringFormat=C}" FontSize="11"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Client Selection -->
                <TextBlock Text="Клиент:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cbClient" 
                          ItemsSource="{Binding Clients}"
                          DisplayMemberPath="FullName"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding Deal.ClientId}"
                          Height="30" 
                          Margin="0,0,0,10"/>

                <!-- Deal Amount -->
                <TextBlock Text="Сумма сделки:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDealAmount" 
                         Text="{Binding Deal.DealAmount, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                         Height="30" 
                         Margin="0,0,0,10"/>

                <!-- Deal Date -->
                <TextBlock Text="Дата сделки:" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpDealDate" 
                            SelectedDate="{Binding Deal.DealDate}"
                            Height="30" 
                            Margin="0,0,0,10"/>

                <!-- Status -->
                <TextBlock Text="Статус:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cbStatus" 
                          ItemsSource="{Binding Statuses}"
                          SelectedItem="{Binding Deal.Status}"
                          Height="30" 
                          Margin="0,0,0,10"/>

                <!-- Agent Selection (only for Admin) -->
                <TextBlock x:Name="tbAgentLabel" 
                           Text="Агент:" 
                           Margin="0,0,0,5"
                           Visibility="Collapsed"/>
                <ComboBox x:Name="cbAgent" 
                          ItemsSource="{Binding Agents}"
                          DisplayMemberPath="Username"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding Deal.AgentId}"
                          Height="30" 
                          Margin="0,0,0,10"
                          Visibility="Collapsed"/>

                <!-- Property Info -->
                <Border BorderBrush="LightGray" 
                        BorderThickness="1" 
                        Padding="10"
                        Margin="0,10,0,10"
                        Background="#F5F5F5">
                    <StackPanel>
                        <TextBlock Text="Информация об объекте:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="tbPropertyInfo" 
                                   Text="{Binding SelectedPropertyInfo}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Client Info -->
                <Border BorderBrush="LightGray" 
                        BorderThickness="1" 
                        Padding="10"
                        Margin="0,0,0,10"
                        Background="#F5F5F5">
                    <StackPanel>
                        <TextBlock Text="Информация о клиенте:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="tbClientInfo" 
                                   Text="{Binding SelectedClientInfo}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Error Message -->
                <TextBlock x:Name="tbError" 
                           Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="btnSave" 
                    Content="Сохранить" 
                    Width="100" 
                    Height="30"
                    IsDefault="True"
                    Click="BtnSave_Click"
                    IsEnabled="{Binding CanSave}"/>
            <Button Content="Отмена" 
                    Width="100" 
                    Height="30" 
                    Margin="10,0,0,0"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>